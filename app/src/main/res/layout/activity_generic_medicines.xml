
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/relative_layout"
    android:paddingLeft="3dp"
    android:paddingRight="3dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Find Generics of Medicines"
        android:id="@+id/textView7"
        android:gravity="center"
        android:textColor="#ff000000"
        android:textSize="25sp"
        android:typeface="monospace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="1dp"
        android:id="@+id/linearLayout7"
        android:background="#666" >

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:background="@mipmap/search_back"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentStart="false" >

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/imageView4"
                    android:src="@mipmap/search_query1"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:id="@+id/search_med_text"
                    android:inputType="textPersonName"
                    android:hint="Search Medicine Name"
                    android:textColor="#ff000000" />
            </LinearLayout>

        </RelativeLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Search"
            android:id="@+id/search_med"
            android:background="#ff04a7d8"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Common Medicines"
        android:id="@+id/textView8"
        android:layout_below="@+id/linearLayout7"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000"
        android:textStyle="italic"
        android:typeface="serif"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerInParent="true"
        android:id="@+id/rel_lay">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout8"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/crocin_btn"
                android:background="#fff"
                android:src="@mipmap/type_tablet"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crocin"
                android:id="@+id/crocin"
                android:textStyle="italic"
                android:textSize="8dp"
                android:typeface="serif"
                android:textColor="#ff000000"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/linearLayout8"
            android:layout_toEndOf="@+id/linearLayout8"
            android:id="@+id/linearLayout9"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ampicillin_btn"
                android:background="#fff"
                android:src="@mipmap/type_injection"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ampicillin"
                android:id="@+id/textView10"
                android:textStyle="italic"
                android:textSize="8dp"
                android:typeface="serif"
                android:textColor="#ff000000"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout10"
            android:layout_toRightOf="@+id/linearLayout9"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ventrolin_btn"
                android:background="#fff"
                android:src="@mipmap/type_inhaler"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ventrolin"
                android:id="@+id/textView11"
                android:textStyle="italic"
                android:textSize="8dp"
                android:typeface="serif"
                android:textColor="#ff000000"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout11"
            android:layout_toRightOf="@+id/linearLayout10"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/benadryl_btn"
                android:background="#fff"
                android:src="@mipmap/type_bottle"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Benadryl"
                android:id="@+id/textView12"
                android:textStyle="italic"
                android:textSize="8dp"
                android:typeface="serif"
                android:textColor="#ff000000"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout12"
            android:layout_toRightOf="@+id/linearLayout11"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/otrivin_btn"
                android:background="#fff"
                android:src="@mipmap/type_drops"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Otrivin"
                android:id="@+id/textView13"
                android:textStyle="italic"
                android:textSize="8dp"
                android:typeface="serif"
                android:textColor="#ff000000"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Common Treatments"
        android:id="@+id/textView9"
        android:layout_below="@+id/rel_lay"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000"
        android:textSize="15sp"
        android:textStyle="italic"
        android:typeface="serif" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_centerInParent="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout13"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cure1"
                android:background="#fff"
                android:src="@mipmap/ic_physiotheraphy"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pain / Body Ache"
                android:id="@+id/textView14"
                android:textStyle="italic"
                android:textSize="8dp"
                android:typeface="serif"
                android:textColor="#ff000000"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/linearLayout13"
            android:layout_toEndOf="@+id/linearLayout13"
            android:id="@+id/linearLayout14"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cure2"
                android:background="#fff"
                android:src="@mipmap/ic_ayurveda"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fever"
                android:id="@+id/textView15"
                android:textStyle="italic"
                android:textSize="8dp"
                android:typeface="serif"
                android:textColor="#ff000000"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout15"
            android:layout_toRightOf="@+id/linearLayout14"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cure3"
                android:background="#fff"
                android:src="@mipmap/ic_phycatrist"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High B.P."
                android:id="@+id/textView16"
                android:textStyle="italic"
                android:textSize="8dp"
                android:typeface="serif"
                android:textColor="#ff000000"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout16"
            android:layout_toRightOf="@+id/linearLayout15"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cure4"
                android:background="#fff"
                android:src="@mipmap/ic_dermotologist"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cough"
                android:id="@+id/textView17"
                android:textStyle="italic"
                android:textSize="8dp"
                android:typeface="serif"
                android:textColor="#ff000000"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout17"
            android:layout_toRightOf="@+id/linearLayout16"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cure5"
                android:background="#fff"
                android:src="@mipmap/ic_homeopathy"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Common Cold"
                android:id="@+id/textView18"
                android:textStyle="italic"
                android:textSize="8dp"
                android:typeface="serif"
                android:textColor="#ff000000"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
