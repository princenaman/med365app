<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="naman.com.med.AboutUs"

    android:background="@mipmap/bg_aboutus">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="false"
        android:id="@+id/layout1"
        android:layout_marginTop="120dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:text="MED365 content "
            android:textColor="@android:color/darker_gray"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textIsSelectable="false" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/middle"
        android:clickable="true"
        android:layout_below="@+id/layout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imgRateUs"
            android:layout_weight="0.1"
            android:src="@mipmap/heart" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Rate us on playstore!"
            android:textSize="20dp"
            android:id="@+id/txtRateUs"
            android:layout_weight="0.89"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/end"
        android:clickable="true"
        android:layout_below="@+id/middle"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/imgVisitUs"
            android:layout_weight=".1"
            android:src="@mipmap/website" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Visit our website."
            android:textSize="20dp"
            android:id="@+id/txtVisitUs"
            android:layout_weight="1"
            android:gravity="center_vertical" />
    </LinearLayout>

</RelativeLayout>
