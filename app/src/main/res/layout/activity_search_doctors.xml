<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_main"
    android:paddingLeft="3dp"
    android:paddingRight="3dp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:fillViewport="false"
        android:id="@+id/scrollview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#fff">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Find Doctors Near You"
                android:id="@+id/search_text"
                android:gravity="center"
                android:textColor="#ff000000"
                android:textSize="25sp"
                android:typeface="monospace"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_text"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="1dp"
                android:id="@+id/linearLayout"
                android:background="#666">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/search_back"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentStart="false">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:id="@+id/imageView2"
                            android:src="@mipmap/search_query1"
                            android:layout_gravity="center_vertical" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:id="@+id/searchquery"
                            android:inputType="textPersonName"
                            android:hint="Search Doctor"
                            android:textColor="#ff000000" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/imageView3"
                            android:src="@mipmap/search_location" />

                        <Spinner
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:id="@+id/location"
                            android:spinnerMode="dropdown"
                            android:entries="@array/places"
                            android:prompt="@string/location" />
                    </LinearLayout>

                </RelativeLayout>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:text="Search"
                    android:id="@+id/btn_search"
                    android:background="#ff04a7d8"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Common Specialists"
                android:id="@+id/textView"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:textColor="#ff000000"
                android:textStyle="italic"
                android:typeface="serif"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout2"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_optha"
                        android:background="#fff"
                        android:src="@mipmap/ic_opthalmologist"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ophthalmologist"
                        android:id="@+id/textView2"
                        android:textStyle="italic"
                        android:textSize="8dp"
                        android:typeface="serif"
                        android:textColor="#ff000000"
                        android:layout_gravity="center"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/linearLayout2"
                    android:layout_toEndOf="@+id/linearLayout2"
                    android:id="@+id/linearLayout3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_ent"
                        android:background="#fff"
                        android:src="@mipmap/ic_spa"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ENT Specialist"
                        android:id="@+id/textView3"
                        android:textStyle="italic"
                        android:textSize="8dp"
                        android:typeface="serif"
                        android:textColor="#ff000000"
                        android:layout_gravity="center"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout4"
                    android:layout_toRightOf="@+id/linearLayout3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_gen"
                        android:background="#fff"
                        android:src="@mipmap/ic_specialty_default"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gen. Physician"
                        android:id="@+id/textView4"
                        android:textStyle="italic"
                        android:textSize="8dp"
                        android:typeface="serif"
                        android:textColor="#ff000000"
                        android:layout_gravity="center"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout5"
                    android:layout_toRightOf="@+id/linearLayout4"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_derm"
                        android:background="#fff"
                        android:src="@mipmap/ic_dermotologist"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dermaetologist"
                        android:id="@+id/textView5"
                        android:textStyle="italic"
                        android:textSize="8dp"
                        android:typeface="serif"
                        android:textColor="#ff000000"
                        android:layout_gravity="center"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout6"
                    android:layout_toRightOf="@+id/linearLayout5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_dentist"
                        android:background="#fff"
                        android:src="@mipmap/ic_dentist"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dentist"
                        android:id="@+id/textView6"
                        android:textStyle="italic"
                        android:textSize="8dp"
                        android:typeface="serif"
                        android:textColor="#ff000000"
                        android:layout_gravity="center"
                        android:gravity="center" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
