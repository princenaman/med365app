<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="3dp"
    android:paddingRight="3dp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:fillViewport="false"
        android:id="@+id/scrollview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@mipmap/bg_searchdoctors"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutsearch"
                android:background="#666"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="98dp">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/search_back"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentStart="false">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:id="@+id/imageView2"
                            android:src="@mipmap/search_query1"
                            android:layout_gravity="center_vertical" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:id="@+id/searchquery"
                            android:inputType="textPersonName"
                            android:hint="Search Doctor"
                            android:textColor="#ff000000" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/imageView3"
                            android:src="@mipmap/search_location" />

                        <Spinner
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:id="@+id/location"
                            android:spinnerMode="dropdown"
                            android:entries="@array/places"
                            android:prompt="@string/location" />
                    </LinearLayout>

                </RelativeLayout>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:text="Search"
                    android:id="@+id/btn_search"
                    android:background="@color/button_login"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MED365 LOGIN"
                android:id="@+id/buttonLogin"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/linearLayoutsearch"
                android:background="@color/button_login"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
